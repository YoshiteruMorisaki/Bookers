<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <p>error: <%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error: <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title, 'Title' %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, 'Body' %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<p>
  <%= link_to 'Show', book_path(@book) %> |
  <%= link_to 'Back', books_path %>
</p>
